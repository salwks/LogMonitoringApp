<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <!-- SolidColorBrush를 이용하여 Background, 텍스트 등의 리소스를 정의 -->
  <SolidColorBrush x:Key="PrimaryColor" Color="#1890FF"/>
  <SolidColorBrush x:Key="BorderColor" Color="#EAEAEA"/>
  <SolidColorBrush x:Key="ErrorColor" Color="#FF4D4F"/>
  <SolidColorBrush x:Key="WarningColor" Color="#FAAD14"/>
  <SolidColorBrush x:Key="SuccessColor" Color="#52C41A"/>
  <SolidColorBrush x:Key="InfoColor" Color="#1890FF"/>
  <SolidColorBrush x:Key="PrimaryTextColor" Color="#333333"/>
  <SolidColorBrush x:Key="BackgroundColor" Color="#FFFFFF"/>
</ResourceDictionary>
